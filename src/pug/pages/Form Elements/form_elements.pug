include ../../utils/mixins
+logo

//не активный инпут
.input-default
    h3.input-default__text text field
    h3.input-default__hidden-text default
    input(type='input' placeholder='Email').input-default__input

//инпут с данными
.input-focus
    h3.input-focus__text text field
    h3.input-focus__hidden-text hover / focus
    input(type='input' value='This is pretty awesome').input-focus__input

//выпадающий список(не активный)
.dropdown-default
    h3.dropdown-default__text dropdown
    h3.dropdown-default__hidden-text default
    input(type='input' value='Сколько гостей').dropdown-default__input
    +button-icon(type = 'button').dropdown-default__button
        +icon(icon="__expand_more", name="expand_more")

//указание даты не активный(даты не выбраны)
.data-picker
    h3.data-picker__text masked text field
    h3.data-picker__hidden-text default
    input(type='input' placeholder='ДД.ММ.ГГГГ').data-picker__input

//выбор даты не активный
.date-dropdown
    h3.date-dropdown__text date dropdown
    input.input-small.date-dropdown__input(type='input' value='ДД.ММ.ГГГГ')
    +button-icon(type = 'button').date-dropdown__button
        +icon(icon="__expand_more", name="expand_more")

//инпут с датой
.date-dropdown__2
    h3.date-dropdown__text date dropdown
    input.input-small.date-dropdown__input(type='input' value='19.08.2019')
    +button-icon(type = 'button').date-dropdown__button
        +icon(icon="__expand_more", name="expand_more")

//указание даты (даты выбраны)
.filter-date-dropdown
    h3.filter-date-dropdown__text filter date dropdown
    input.input-medium.filter-date-dropdown__input(type='input' value='19 авг - 23 авг')
    +button-icon(type = 'button').filter-date-dropdown__button
        +icon(icon="__expand_more", name="expand_more")

//ввод емейл адреса
.subscription-text-field
    h3.subscription-text-field__text subscription text field
    input.input-medium.subscription-text-field__input(type='input' placeholder='Email')
    +button-icon(type = 'submit').subscription-text-field__button
        +icon(icon="__subscription", name="arrow_forward")

//активный инпут с выбором кроватей
.dropdown-expanded
    h3.dropdown-expanded__text dropdown
    h3.dropdown-expanded__text-hidden default
    input.input-medium.dropdown-expanded__input(type='input' value='2 спальни, 2 кровати...')
    +button-icon(type = 'button').dropdown-expanded__button
        +icon(icon="__dropdown_more", name="expand_more")

//открытый выпадающий список в котором указывается количество кроватей
.open-dropdown-expanded
    h3.open-dropdown-expanded__text dropdown
    h3.open-dropdown-expanded__text-hidden expanded
    input.input-medium.open-dropdown-expanded__input(type='input' value='2 спальни, 2 кровати...')
    +button-icon(type = 'button').open-dropdown-expanded__button
        +icon(icon="__open-dropdown_more", name="expand_more")
    .dropdown-expanded__open
        //mixin который создает необходимое количество пунктов
        +dropdown(dropdownList)


//скрытый список предоставляемых услуг
.checkbox-list
    h3.checkbox-list__text expandable checkbox list
    +button-icon(type = 'button').checkbox-list__button
        +icon(icon="__expand_more", name="expand_more")

//раскрытый список предоставляемых услуг, внутри миксин checkbox, который выводит этот список
.open-checkbox-list
    h3.open-checkbox-list__text expandable checkbox list
    +button-icon(type = 'button').open-checkbox-list__button
        +icon(icon="__rotate", name="expand_more")
    .open-list
        +checkbox(expandable)


.advantages
    .advantages__comfort
        .advantages__wrapper-icon
            i.material-icons.material-icons__advantages insert_emoticon
        .advantages__text Комфорт <p>Шумопоглощающие стены</p>
    .advantages__band
    .advantages__convenience
        .advantages__wrapper-icon
            i.material-icons.material-icons__advantages location_city
        .advantages__text Удобство <p>Окно в каждой из спален</p>
    .advantages__band

//список дополнительных возможностей
.checkbox-buttons
    h3.checkbox-button__text checkbox buttons
    .checkbox-buttons__block
        +checkbox(checkbox_button)

//выбор пола(переключатель)
.radio-buttons
    h3.radio-buttons__text radio buttons
    .radio-switch__man
        input(type='radio' name='radio' value='1' checked='')
        label Мужчина
    .radio-switch__woman
        input(type='radio' name='radio' value='2')
        label Женщина

//переключатель на рассылку
.toggle
    h3.toggle__text  toggle
    .toggle__active
        input.switch(type='checkbox' checked='')
        label Получать спецпредложения
    .toggle__not-active
        input.switch(type='checkbox')
        label Получать спецпредложения

//показатель лайков активный/не активный
.like-button
    h3.like-button__text  like button
    .like-button__not-active
        +button-icon(type='submit').like-button-counter
            +icon(icon="__heart", name="favorite_border")
            span.like__not-active-text  2
    .like-button__active
        +button-icon(type='submit').like-button-counter.like-button-active
            +icon(icon="__heart", name="favorite")
            span.like__active-text  12

//кнопки рейтинга
//.rate-button.general-setting-block
.rate-button__block
    h3.rate-button__text  rate button
    +button-icon(type = 'rating').rating
        - for(let i = 1; i <= 5; i++)
        -if (i == 5)
            +icon(icon="__rating" name="star_border")
        -else
            +icon(icon="__rating" name="star")
    +button-icon(type = 'rating').rating-full
        - for(let i = 1; i <= 5; i++)
        +icon(icon="__rating" name="star")

//открытый выпадающий список в котором указывается количество человек
.open-guest-dropdown
    h3.open-guest-dropdown__text dropdown
    input(type='input' value='Сколько гостей').open-guest-dropdown__input
    +button-icon(type = 'button').open-guest-dropdown__button
        +icon(icon="__dropdown-expand_more", name="expand_more")
    .guest-dropdown__open
        +dropdown(guestDropdownList)
        button(type='button').button-apply.guest-button-apply применить

//дополнительный чекбокс(раскрытый)
.rich-checkbox-buttons
    h3.rich-checkbox-button__text rich checkbox buttons
    .wide-corridor
        input(type="checkbox")
        .general-explanation Широкий коридор
        .explanation Ширина коридоров в номере не менее 91 см.
    .disabled-assistant
        input(type="checkbox")
        .general-explanation Помощник для инвалидов
        .explanation На 1 этаже вас встретит специалист и проводит до номера.

//слайдер(ползунок), реализация через js
.range-slider
    h3.range-slider__text range slider
    h3.range-slider__price 5 000₽ - 10 000₽
    input(id="prange" type="text" value="").js-range-slider
    //.range-slider__group-line
    //    .range-slider__group-circle-left
    //    .range-slider__group-dedicated
    //    .range-slider__group-circle-right


//кнопки в обычном состоянии и при наведении
.buttons__group
    h3.buttons__text buttons
    .button__color
        button(type='color-button').color__text-style click me
        button(type='color-button').color__text-style.button__hover click me
    .button__transparent
        button(type='color-button').transparent.transparent__text-style  click me
        button(type='color-button').transparent.transparent__text-style.button__hover  click me
    .button__apply
        button(type='button').apply__color click me
        button(type='button').apply__hover  click me


//кнопка
.button__default
    +button-icon(type = 'button').big-button
        span.big-button__text перейти к оплате
        +icon(icon="__button-default", name="arrow_forward")

//пагинация
.pagination
    h3.pagination__text pagination
    .pagination__group
        .pagination__group-numeral
            +pagination
            +button-icon(type='button').pagination__last-button
                +icon(icon="__pagination-button", name="arrow_forward")
        .pagination__group-text 1 – 12 из 100+ вариантов аренды



//открытый выпадающий список в котором уже указано количество человек
.open-data-dropdown
    h3.open-data-dropdown__text dropdown
    input(type='input' value='3 гостя').open-data-dropdown__input
    +button-icon(type = 'button').open-data-dropdown__button
        +icon(icon="__open-dropdown", name="expand_more")
    .data-dropdown__open
        +dropdown(dataDropdownList)
    button(type='button').button-apply.data-button-clear очистить
    button(type='button').button-apply.data-button-apply применить


//список запретов
.bullet-list
    h3.general-setting-text.bullet-list__text bullet list
    .bullet-list__group
        +bullet-list(bulletList)



.review
    .review__author
        .review__author-avatar
            img(src="../../../assets/img/avatar.png")
        .review__author-name Мурад Сарафанов <p>5 дней назад</p>
    .review__like-button
        +button-icon(type='submit').like-button-counter.like-button-active
            +icon(icon="__heart", name="favorite")
            span.like__active-text  12
    .review__text Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.



