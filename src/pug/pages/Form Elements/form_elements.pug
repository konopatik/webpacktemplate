    input.text-field-input.open-guest-dropdown__input(value='Сколько гостей')
    .input-guest-dropdown
        +button-icon.button__icon
            +icon(icon="__expand_more", name="expand_more")
    .guest-dropdown__open
        .adults
            .general-setting-text.people__text взрослые
            .guest-dropdown__counter
                button.button.restangle.restangle__not-active
                    span.restangle__text -
                span.general-setting-text.quantity 0
                button.button.restangle.restangle__plus
                    span.restangle__text +
        .children
            .general-setting-text.people__text.children__text  дети
            .guest-dropdown__counter
                button.button.restangle.restangle__not-active
                    span.restangle__text -
                span.general-setting-text.quantity__children 0
                button.button.restangle.restangle-children__plus
                    span.restangle__text +
        .babies
            .general-setting-text.people__text.babies__text  младенцы
            .guest-dropdown__counter
                button.button.restangle.restangle__not-active
                    span.restangle__text -
                span.general-setting-text.quantity__babies 0
                button.button.restangle.restangle-babies__plus
                    span.restangle__text +
    button.button.calendar__link-color.link-button применить

