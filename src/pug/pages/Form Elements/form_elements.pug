.like-button.general-setting-block
    h3.general-setting-text.like-button-text  like button
    .like-button__not-active
        +button-icon().like-button__not-active-switch
            +icon(icon="__heart", name="favorite_border")
            span.like-button__not-active-text 2
    .like-button__active
        .like-button__active-switch
        +button-icon().like-button__active-switch
            +icon(icon="__heart material-icons__heart-color", name="favorite")
            span.like-button__active-text 12

//кнопки рейтинга
//.rate-button.general-setting-block
h3.general-setting-text.rate-button__text  rate button
.rate-button__rating
    +button-icon.rate-button
        - for(let i = 1; i <= 5; i++)
        -if (i == 5)
            +icon(icon="__rating" name="star_border")
        -else
            +icon(icon="__rating" name="star")
.rate-button__rating-full
    +button-icon.rate-button
        - for(let i = 1; i <= 5; i++)
        +icon(icon="__rating" name="star")

//открытый выпадающий список в котором указывается количество человек
.open-guest-dropdown.general-setting-block
